{
  "name": "paybox-stdd-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --files src/main.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest --runInBand",
    "test:functional": "jest --runInBand --testPathIgnorePatterns='(idor|security-headers|webhook|ssrf|jwt-verification|property-dto)\\.spec\\.ts'",
    "test:security": "jest --runInBand test/integration/idor.spec.ts test/integration/security-headers.spec.ts test/integration/webhook.spec.ts test/integration/ssrf.spec.ts test/unit/jwt-verification.spec.ts test/unit/password.spec.ts  test/bdd/property-dto.spec.ts",
    "test:sec": "npm run test:security",
    "test:unit": "jest --runInBand --testPathPattern=unit",
    "test:int": "jest --runInBand --testPathPattern=integration",
    "test:bdd": "jest --runInBand --testPathPattern=bdd"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crypto-js": "^4.2.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.20",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
